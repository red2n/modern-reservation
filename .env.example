# Modern Reservation System - Environment Variables Configuration
# Copy this file to .env and configure with your actual values
# CRITICAL: Never commit .env file to version control

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# REQUIRED: Database credentials must be set
DB_URL=jdbc:postgresql://localhost:5432/modern_reservation
DB_USERNAME=reservation_user
DB_PASSWORD=                    # REQUIRED: Set strong password

# Database connection pool settings (optional, defaults provided)
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5

# =====================================================
# JWT SECURITY CONFIGURATION
# =====================================================
# CRITICAL: Generate strong secret: openssl rand -base64 32
JWT_SECRET=                     # REQUIRED: Minimum 256-bit secret
JWT_EXPIRATION=86400000         # 24 hours in milliseconds
JWT_ISSUER=modern-reservation-system
JWT_AUDIENCE=modern-reservation-api

# =====================================================
# CONFIG SERVER SECURITY
# =====================================================
CONFIG_SERVER_URL=http://localhost:8888/config
CONFIG_SERVER_USERNAME=config-admin
CONFIG_SERVER_PASSWORD=         # REQUIRED: Set strong password

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=                 # Optional: Set if Redis auth enabled

# =====================================================
# KAFKA CONFIGURATION
# =====================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# =====================================================
# EUREKA SERVICE DISCOVERY
# =====================================================
EUREKA_SERVER_URL=http://localhost:8761/eureka/

# =====================================================
# EXTERNAL SERVICES (Optional)
# =====================================================
# Payment Gateway (Stripe)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Email Service
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =====================================================
# MONITORING AND OBSERVABILITY
# =====================================================
ZIPKIN_ENABLED=true
ZIPKIN_BASE_URL=http://localhost:9411

# Prometheus metrics
PROMETHEUS_ENABLED=true

# Logging level
LOG_LEVEL=INFO                  # Options: TRACE, DEBUG, INFO, WARN, ERROR

# =====================================================
# ENVIRONMENT SETTINGS
# =====================================================
SPRING_PROFILES_ACTIVE=production
ENVIRONMENT=production          # Options: development, staging, production

# =====================================================
# APPLICATION SETTINGS
# =====================================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_CAPACITY=20

# Session timeout (in seconds)
SESSION_TIMEOUT=3600            # 1 hour

# File upload limits (in bytes)
MAX_FILE_SIZE=10485760          # 10 MB
MAX_REQUEST_SIZE=104857600      # 100 MB

# =====================================================
# FEATURE FLAGS
# =====================================================
FEATURE_ANALYTICS_ENABLED=true
FEATURE_BATCH_PROCESSING_ENABLED=true
FEATURE_CHANNEL_MANAGER_ENABLED=false

# =====================================================
# BACKUP AND MAINTENANCE
# =====================================================
# Database backup retention (in days)
BACKUP_RETENTION_DAYS=30

# Analytics data retention (in months)
ANALYTICS_RETENTION_MONTHS=12

# =====================================================
# CORS CONFIGURATION
# =====================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_MAX_AGE=3600

# =====================================================
# SSL/TLS CONFIGURATION (Production)
# =====================================================
# SSL_ENABLED=true
# SSL_KEY_STORE=classpath:keystore.p12
# SSL_KEY_STORE_PASSWORD=
# SSL_KEY_STORE_TYPE=PKCS12
# SSL_KEY_ALIAS=modern-reservation

# =====================================================
# DEVELOPMENT SETTINGS (Development only)
# =====================================================
# Set weaker passwords for development (NOT FOR PRODUCTION)
# DEV_DB_PASSWORD=reservation_pass
# DEV_CONFIG_SERVER_PASSWORD=admin123
# DEV_JWT_SECRET=developmentSecretKey2024DoNotUseInProduction
